<h1>Stub of Homepage</h1>
<h3>for regular users</h3>

<% @all_items.each do |item| %>
	<div class="demo-card-square mdl-card mdl-shadow--2dp">
		<div class="mdl-card__title mdl-card--expand">
			<h2 class="mdl-card__title-text item-photo"><img src="<%= item.photo %>" alt=""></h2>
		</div>
		<div class="mdl-card__supporting-text">
			<%= item.name %>
			<h4>$<%= item.price %></h4>
			<ul class="flex-container item-stats">
				<li class="flex-item">Priority: <%= item.priority.capitalize %></li>
				<li class="flex-item">Need: <%= item.quantity %></li>
				<li class="flex-item">Has: <%= item.has_amount %></li>
			</ul>
			<ul class="flex-container item-stats">
				<li class="flex-item"><%= item.list.shelter.name %></li>
				<li class="flex-item"><%= item.list.shelter.city %>, <%= item.list.shelter.state %></li>
			</ul>
		</div>

		<%= link_to item.button_text, item.button_url, target: "_blank", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--accent mdl-js-ripple-effect" %>
	</div>
	<br>
<% end %>