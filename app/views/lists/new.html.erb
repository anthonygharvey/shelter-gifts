<h2>Create A New Wishlist</h2>


<%= form_for([@shelter, @list], url: shelter_lists_path(@shelter), method: "POST") do |f| %>
	<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
		<%= f.label :name, "List Name", class: "mdl-textfield__label" %>
		<%= f.text_field :name, class: "mdl-textfield__input" %>
	</div>
	<% if @list.errors[:name].to_sentence != "" %>
		<div class="field_with_errors">Name can't be blank</div>
	<% end %>
	<br>
	<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
		<%= f.label :description, "List description", class: "mdl-textfield__label" %>
		<%= f.text_field :description, class: "mdl-textfield__input" %>
	</div><br>
	<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
		<%= f.label :url, "Amazon Wishlist URL", class: "mdl-textfield__label" %>
		<%= f.text_field :url, class: "mdl-textfield__input" %>
		
		<% if @list.errors[:url].to_sentence != "" %>
			<div class="field_with_errors">URL must be valid</div>
		<% end %>
	</div><br>
	<%= f.submit "Create List", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored", id: "submit-button", onclick: "show_progress_bar('list_progress_bar')" %>
<% end %>
	<br>

	<div id="list_progress_bar" class="mdl-progress mdl-js-progress mdl-progress__indeterminate">
		<p>Getting wishlist data...</p>
	</div>