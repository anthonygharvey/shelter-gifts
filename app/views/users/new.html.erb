<div class="demo-card-wide mdl-card mdl-shadow--2dp">
	<div class="mdl-card__title">
		<h2 class="mdl-card__title-text">Welcome</h2>
	</div>
	<div class="mdl-card__supporting-text">
		Lorem ipsum dolor sit amet, consectetur adipiscing elit.
		Mauris sagittis pellentesque lacus eleifend lacinia...
	
		<br>
		<%= form_for(@user) do |f| %>
			<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
				<%= f.label :first_name, "First Name", class: "mdl-textfield__label" %>
				<%= f.text_field :first_name, class: "mdl-textfield__input" %>
			</div>
			<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
				<%= f.label :last_name, "Last Name", class: "mdl-textfield__label" %>
				<%= f.text_field :last_name, class: "mdl-textfield__input" %>
			</div>
			<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
				<%= f.label :username, "Username", class: "mdl-textfield__label" %>
				<%= f.text_field :username, class: "mdl-textfield__input" %>
			</div>
			<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
				<%= f.label :email, "Email", class: "mdl-textfield__label" %>
				<%= f.text_field :email, class: "mdl-textfield__input" %>
			</div>
			<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
				<%= f.label :password, "Password", class: "mdl-textfield__label" %>
				<%= f.text_field :password, type: "password", class: "mdl-textfield__input" %>
			</div>
		</div>
		<div class="mdl-card__actions mdl-card--border">
			<%= submit_tag "Register", class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
		</div>
	<% end %>
</div>